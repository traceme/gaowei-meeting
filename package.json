{
  "name": "gaowei-meeting-ai",
  "version": "2.0.0",
  "description": "高维会议AI - 智能会议转录和摘要系统",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter='./packages/*'",
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@gaowei/api",
    "dev:web": "turbo dev --filter=@gaowei/web",
    "dev:full": "concurrently \"pnpm dev:api\" \"pnpm dev:web\" --names \"API,WEB\" --prefix-colors \"blue,green\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules/.cache",
    "clean:all": "turbo clean && find . -name 'node_modules' -type d -prune -exec rm -rf {} +",
    "test": "turbo test",
    "test:watch": "turbo test -- --watch",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:studio": "turbo db:studio",
    "db:seed": "turbo db:seed",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "precommit": "turbo lint type-check && pnpm format:check",
    "analyze": "node scripts/analyze.js",
    "analyze:build": "node scripts/analyze.js --build-time",
    "perf": "pnpm analyze && pnpm analyze:build",
    "postinstall": "pnpm build",
    "prepare": "husky",
    "deploy": "./scripts/deploy.sh production",
    "deploy:dev": "./scripts/deploy.sh development",
    "deploy:staging": "./scripts/deploy.sh staging",
    "docker:build": "docker build -t gaowei-meeting-ai:latest .",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:clean": "docker system prune -a -f",
    "start": "node packages/api/dist/index.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "backup": "./scripts/backup.sh full",
    "backup:quick": "./scripts/backup.sh quick",
    "backup:data": "./scripts/backup.sh data",
    "rollback": "./scripts/rollback.sh",
    "rollback:list": "./scripts/rollback.sh --list",
    "health": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@turbo/gen": "^1.10.16",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.3",
    "turbo": "^1.10.16",
    "typescript": "^5.6.2",
    "vite-bundle-analyzer": "^0.22.3",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "tooling/*",
    "apps/*"
  ]
}
