{
  "name": "gaowei-meeting-ai",
  "version": "2.0.0",
  "description": "高维会议AI - 智能会议转录和摘要系统",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "test": "turbo test",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:studio": "turbo db:studio",
    "db:seed": "turbo db:seed",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "pnpm build"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.16",
    "turbo": "^1.10.16",
    "prettier": "^3.0.3",
    "@types/node": "^20.8.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*",
    "tooling/*",
    "apps/*"
  ]
}
