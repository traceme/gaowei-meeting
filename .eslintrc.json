{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "no-unused-vars": "warn"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "dist/",
    "build/", 
    "node_modules/",
    "*.config.js",
    "*.config.ts",
    "coverage/",
    ".next/",
    "storybook-static/"
  ]
} 